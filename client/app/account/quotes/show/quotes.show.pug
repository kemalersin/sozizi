update-title(title='{{quote.title}}')
update-meta(property='og:url' content='{{quote.url}}')
update-meta(property='og:title' content='{{quote.title}}')
update-meta(property='og:description' content='{{quote.description}}')

.container(ng-if='quote.notFound')
  .row
    .col-md-12.text-center
      h1 Redirecting...

.jumbotron.quote(ng-if='!quote.notFound && quote.initalized')
  .media
    img.media-object(src='{{quote.book.image_url}}')
    h3.media-heading
      a.text-default(ui-sref='goodreads.book({id: quote.book.id})')
        | {{quote.book.title}}
    p
      a.text-default(ui-sref='goodreads.author({id: quote.book.author.id})')
        | {{quote.book.author.name}}
    hr
    blockquote
      | {{quote.body}}
      p
    hr
    .row
      .col-md-6
        ul.list-inline
          li
            a.btn.text-muted.no-padding-left(ui-sref='goodreads.user({id: quote.user.goodreads.id})')
              i.glyphicon.glyphicon-pencil
              | &nbsp;
              | {{quote.user.name}}
          li
            a.btn.text-muted.no-padding-left(ui-sref='goodreads.quotes({id: quote.id})')
              i.glyphicon.glyphicon-time
              | &nbsp;
              span(am-time-ago='quote.date')
      .col-md-6.text-right
        button.btn.btn-default(type='button', ng-click='quote.share()')
          i.fa.fa-facebook &nbsp;Share
